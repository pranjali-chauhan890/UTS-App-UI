<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFE0B2"
        android:padding="12dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_indian_railways"
                android:contentDescription="IR Logo" />
        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UTS - IR Unreserved\nTicketing"
            android:textSize="18sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:gravity="center_vertical"

            />
    </LinearLayout>

    <!-- Main Feature Grid -->
    <!-- Feature Grid Section -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- Normal Booking -->
    <!-- Booking Options in One Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Normal Booking -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_normal_booking"
                android:contentDescription="Normal Booking" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Normal\nbooking"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000000"
                />
        </LinearLayout>

        <!-- Quick Booking -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_quick_booking"
                android:contentDescription="Quick Booking" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Quick\nbooking"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Platform Booking -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_platform_booking"
                android:contentDescription="Platform Booking" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Platform\nbooking"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Season Booking -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_season_booking"
                android:contentDescription="Season Booking" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Season\nbooking"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- QR Booking -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_qr_booking"
                android:contentDescription="QR Booking" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="QR\nbooking"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>


        <!-- Repeat above layout for Quick Booking, Platform Booking, etc. -->

    </GridLayout>

    <!-- Third Section: Cancel Ticket, Booking History, Sure Ticket, Wallet, Profile, Help -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- Cancel Ticket -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_cancel_ticket"
                android:contentDescription="Cancel Ticket" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="CANCEL TICKET"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:gravity="center" />
        </LinearLayout>

        <!-- Booking History -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_booking_history"
                android:contentDescription="Booking History" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="BOOKING HISTORY"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:gravity="center" />
        </LinearLayout>

        <!-- Sure Ticket -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_show_ticket"
                android:contentDescription="Sure Ticket" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="SHOW TICKET"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:gravity="center" />
        </LinearLayout>

        <!-- Our Wallet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_wallet"
                android:contentDescription="Wallet" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="R-WALLET"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:gravity="center" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="PROFILE"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:gravity="center" />
        </LinearLayout>

        <!-- Help -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_transactions"
                android:contentDescription="Help" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="TRANSACTIONS"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#FF5722"
                android:gravity="center" />
        </LinearLayout>

    </GridLayout>

    <!-- Normal Booking Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/form_background"
        android:padding="16dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="NORMAL BOOKING"
            android:textStyle="bold"
            android:background="#FF5722"
            android:padding="6dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Radio Buttons -->
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book and Travel\n(Paperless)"
                android:textColor="#000000"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book and Print (Paper)"
                android:textColor="#000000"
                />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:weightSum="3">

            <!-- Depart from STN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Depart from"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STN"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station Name"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#FF5722"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Arrow -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginHorizontal="12dp"
                android:contentDescription="Arrow" />

            <!-- Going to STN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Going to"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STN"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Station Name"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="#FF5722"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
        <!-- Next Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
</ScrollView>